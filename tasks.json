{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start MkDocs Dev Server",
      "type": "shell",
      "command": "mkdocs",
      "args": ["serve", "--dev-addr", "127.0.0.1:8000"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "detail": "Start MkDocs development server at http://127.0.0.1:8000"
    },
    {
      "label": "Build MkDocs Site",
      "type": "shell",
      "command": "mkdocs",
      "args": ["build"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "detail": "Build static MkDocs site for production"
    },
    {
      "label": "Generate Docs from JSON",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build", "&&", "npx", "tsx", "src/generate-docs.ts"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "detail": "Generate markdown documentation files from JSON data"
    },
    {
      "label": "Full Docs Pipeline",
      "type": "shell",
      "command": "bash",
      "args": ["-c", "npm run build && npx tsx src/generate-docs.ts && mkdocs serve --dev-addr 127.0.0.1:8000"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "detail": "Run complete pipeline: generate docs and start dev server"
    }
  ]
}